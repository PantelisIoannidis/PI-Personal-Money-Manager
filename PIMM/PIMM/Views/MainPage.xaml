<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:PIMM"
             NavigationPage.HasNavigationBar="True"
             BackgroundColor="{DynamicResource backgroundColor}"
             BarBackgroundColor="{DynamicResource barBackgroundColor}"
             BarTextColor="{DynamicResource textColor}"
             Title="Personal Money Tracker"
             x:Class="PIMM.MainPage">

    <TabbedPage.ToolbarItems>
        <ToolbarItem x:Name="settingsMenu"
                     Icon="tools.png"
                     Text="Settings"
                     Command="{Binding GoToSettingsPageCommand}"
                     Order="Secondary" />
        <ToolbarItem x:Name="aboutMenu"
                     Icon="eye.png"
                     Text="About"
                     Command="{Binding GoToAboutPageCommand}"
                     Order="Secondary" />
    </TabbedPage.ToolbarItems>

    <local:HomePage Title="Overview" ClassId="Overview - Charts"  IconImageSource="chartpie.png" x:Name="overview" BackgroundColor="{DynamicResource backgroundColor}" />

    <local:TransactionsPage Title="Transactions" ClassId="Transactions" IconImageSource="dollarsign.png" x:Name="transactions" BackgroundColor="{DynamicResource backgroundColor}" />

    <local:CategoriesPage Title="Categories" ClassId="Categories" IconImageSource="tag.png" x:Name="categories" BackgroundColor="{DynamicResource backgroundColor}" />

    <local:AccountsPage Title="Accounts" ClassId="Accounts" IconImageSource="moneyBillWave.png" x:Name="accounts" BackgroundColor="{DynamicResource backgroundColor}" />
</TabbedPage>