<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:PIMM"
             NavigationPage.HasNavigationBar="True"
             Title="Personal Money Tracker"
             x:Class="PIMM.MainPage">
    
    <TabbedPage.ToolbarItems>
        <ToolbarItem x:Name="settingsMenu"
                     Icon="tools.png" 
                     Text="Settings"
                     Command="{Binding GoToSettingsPageCommand}"
                     Order="Secondary"/>
        <ToolbarItem x:Name="aboutMenu"
                     Icon="eye.png" 
                     Text="About"
                     Command="{Binding GoToAboutPageCommand}"
                     Order="Secondary"/>
    </TabbedPage.ToolbarItems>

    <local:HomePage Title="Overview" IconImageSource="chartpie.png" x:Name="overview"/>

    <local:TransactionsPage Title="Transactions" IconImageSource="dollarsign.png" x:Name="transactions"/>

    <local:CategoriesPage Title="Categories" IconImageSource="tag.png" x:Name="categories"/>

    <local:AccountsPage Title="Accounts" IconImageSource="moneyBillWave.png" x:Name="accounts"/>

</TabbedPage>
